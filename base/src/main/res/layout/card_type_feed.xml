<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardItem">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/md_default_padding_16"
            android:layout_marginStart="@dimen/md_default_padding_16"
            android:layout_marginTop="@dimen/md_default_padding_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="26dp"
            android:layout_marginLeft="@dimen/md_default_padding_8"
            android:layout_marginRight="26dp"
            android:layout_marginStart="@dimen/md_default_padding_8"
            android:layout_marginTop="@dimen/md_default_padding_16"
            android:text="TextView"
            android:textColor="?attr/colorPrimaryText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageProfile"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textLastSeenTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="26dp"
            android:layout_marginLeft="@dimen/md_default_padding_8"
            android:layout_marginRight="26dp"
            android:layout_marginStart="@dimen/md_default_padding_8"
            android:text="TextView"
            android:textColor="?attr/colorSecondaryText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageProfile"
            app:layout_constraintTop_toBottomOf="@+id/userName" />

        <TextView
            android:id="@+id/textServiceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/md_default_padding_16"
            android:layout_marginLeft="@dimen/md_default_padding_16"
            android:layout_marginRight="@dimen/md_default_padding_16"
            android:layout_marginStart="@dimen/md_default_padding_16"
            android:layout_marginTop="@dimen/md_default_padding_8"
            android:text="TextView"
            android:textColor="?attr/colorPrimaryDetailText"
            app:layout_constraintEnd_toStartOf="@+id/viewZumbaraHour"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageProfile" />

        <View
            android:id="@+id/viewZumbaraHour"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/md_default_padding_16"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textServiceName" />

        <ImageView
            android:id="@+id/imageRatingStarFirst"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/viewZumbaraHour"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/RatioStarStyle"/>

        <ImageView
            android:id="@+id/imageRatingStarSecond"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageRatingStarFirst"
            app:layout_constraintStart_toEndOf="@+id/imageRatingStarFirst"
            style="@style/RatioStarStyle" />

        <ImageView
            android:id="@+id/imageRatingStarThird"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageRatingStarSecond"
            app:layout_constraintStart_toEndOf="@+id/imageRatingStarSecond"
            style="@style/RatioStarStyle" />

        <ImageView
            android:id="@+id/imageRatingStarFourth"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageRatingStarThird"
            app:layout_constraintStart_toEndOf="@+id/imageRatingStarThird"
            style="@style/RatioStarStyle"/>

        <ImageView
            android:id="@+id/imageRatingStarFifth"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageRatingStarFourth"
            app:layout_constraintStart_toEndOf="@+id/imageRatingStarFourth"
            style="@style/RatioStarStyle"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

        <ImageView
            android:id="@+id/buttonMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_more_horiz_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="#1eb8c6"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>